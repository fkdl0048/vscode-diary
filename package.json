{
  "name": "vscode-diary",
  "displayName": "Daily Diary",
  "description": "Simple diary management extension",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/fkdl0048/vscode-diary"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-diary.createDiary"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-diary.createDiary",
        "title": "Create Today's Diary"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-diary.createDiary",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d"
      }
    ],
    "configuration": {
      "title": "Diary",
      "properties": {
        "diary.basePath": {
          "type": "string",
          "default": "",
          "description": "Base path for diary files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}